<div class="container">
  <div class="row">
    <div class="col-3 left-frame">
      <div class="w-100">
        <h5>Search</h5>
        <%= form_tag universities_programs_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query], :class => "home-search-input w-100 mb-2", placeholder: "Program Name"%>
        <%= submit_tag "Search", class: "btn btn-block primary-btn " %>
        <% end %>
      </div>
    </div>
    <div class="col-9">
      <div class="row mx-2">
        <p>(number) results found</p>
      </div>
      <div class="row mx-2">
        <p>filters:</p>
      </div>
      <div class="row">
        <% @universities_programs.each do |program|%>
        <div class="card-product-infos" style="border: 1px solid red;">
          <img class="col-2" src="assets/campus.png" />
          <h2><%= program.program.name%></h2>
          <h3><%= program.university.name %></h3>
          <p><%=program.degree%></p>
          <%= link_to "universities_programs/#{program.id}" do %>
          <label class="secondary-btn">See details</label>
          <%end%>
        </div>
        <%end%>
      </div>
    </div>
  </div>
</div>

